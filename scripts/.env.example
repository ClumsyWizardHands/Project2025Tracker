# Database configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=project2025tracker
DB_USER=postgres
DB_PASSWORD=your_password

# API Keys
# ProPublica Congress API - https://projects.propublica.org/api-docs/congress-api/
PROPUBLICA_API_KEY=your_propublica_api_key

# News API - https://newsapi.org/
NEWS_API_KEY=your_news_api_key

# Twitter API - https://developer.twitter.com/en/docs/twitter-api
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Google Custom Search API - https://developers.google.com/custom-search/v1/overview
GOOGLE_API_KEY=your_google_api_key
GOOGLE_CSE_ID=your_google_cse_id

# Data collection settings
# Set to 'true' to process all members, 'false' to process a limited number for testing
PROCESS_ALL_MEMBERS=false

# Number of members to process if PROCESS_ALL_MEMBERS is false
MEMBERS_TO_PROCESS=10

# Delay between API requests in milliseconds (to avoid rate limiting)
API_REQUEST_DELAY=1000
